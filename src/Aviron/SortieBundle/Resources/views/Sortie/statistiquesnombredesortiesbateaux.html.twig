{% extends "::layout.html.twig" %}

{% block title %}
    Sorties - Nombre de sorties par bateau - {{ parent() }}
{% endblock %}

{% block body %}
    <h2>Sorties - Nombre de sorties par bateau</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
              <tr>
                <th style="width: 20%">Bateau</th>
                <th style="width: 65%">Nombre de sorties</th>
                <th style="width: 15%"></th>
              </tr>
            </thead>
            <tbody>
            {% for stat in modele.statistiques | sortbyfield('nombreDeSorties') | reverse %}
            <tr>
                <td>{{ stat.label }}</td>
                <td>
                    <div class="progress" style="margin-bottom: 0px">
                        <div class="progress-bar" style="width: {{ stat.nombredesorties * 100 / modele.maxsorties }}%">{{ stat.nombredesorties }}</div>
                    </div>
                </td>
                <td>pour {{ stat.kmparcourus }} km</td>
            </tr>             
            {% else %}
            <tr>
                <td colspan="3">Aucune donnée disponible pour cette période</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}