{% extends "::layout.html.twig" %}

{% block title %}
  Liste des bateaux - {{ parent() }}
{% endblock %}

{% block body %}

  <h2 class="page-header">Liste des bateaux du Club</h2>
  <p>
    <a href="{{ path('aviron_bateaux_ajouter') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-plus"></i>
      Ajouter un bateau
    </a>
  </p>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Type</th>
          <th>Nom</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {% for bateau in listeBateaux %}
        <tr>
          <td>{{ bateau.type.nom }}</td>
          <td>{{ bateau.nom }}</td>
          <td><a href="{{ path('aviron_bateaux_modifier', {'id': bateau.id}) }}" class="btn btn-primary" title="Modifier le bateau">
              <i class="glyphicon glyphicon-pencil"></i>
              Modifier
            </a>
            {% if bateau.datehorsservice == null %}
            <a href="{{ path('aviron_bateaux_mettrehorsservice', {'id': bateau.id}) }}" class="btn btn-warning">
              <i class="glyphicon glyphicon-wrench"></i>
              Mettre hors-service
            </a>
            {% endif %}
          </td>
        </tr>
        {% else %}
        <tr>
        <td colspan="3">Pas (encore !) de bateaux</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}