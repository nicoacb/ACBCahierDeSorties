{% extends "layout.html.twig" %}

{% block title %}
  Consultation d'une sortie - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>{{ sortie.title }}</h2>
  <i>Par {{ sortie.author }}, le {{ sortie.date|date('d/m/Y') }}</i>

  <div class="well">
    {{ sortie.content }}
  </div>

  <p>
    <a href="{{ path('aviron_sortie_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste
    </a>
    <a href="{{ path('aviron_sortie_edit', {'id': sortie.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-pencil"></i>
      Modifier la sortie
    </a>
    <a href="{{ path('aviron_sortie_delete', {'id': sortie.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer la sortie
    </a>
  </p>

{% endblock %}